<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardProv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardKab"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <Spinner
            android:id="@+id/spinProv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:spinnerMode="dialog" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardKab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardKec"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <Spinner
            android:id="@+id/spinKab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:spinnerMode="dialog" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardKec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <Spinner
            android:id="@+id/spinKec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:spinnerMode="dialog" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardKel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardKec"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <Spinner
            android:id="@+id/spinKel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:spinnerMode="dialog" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnDone"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardKel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:text="Send" />
</RelativeLayout>